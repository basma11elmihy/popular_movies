<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailFragment">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        style="@style/TitleStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/title"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:id="@+id/poster"
            tools:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/year"
                app:layout_constraintStart_toEndOf="@id/poster"
                app:layout_constraintTop_toTopOf="@id/poster"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                tools:text="2018"
                android:textColor="@color/primaryText"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vote"
                app:layout_constraintTop_toBottomOf="@id/year"
                app:layout_constraintStart_toStartOf="@id/year"
                app:layout_constraintEnd_toEndOf="@id/year"
                tools:text="6.5"
                android:textColor="@color/secondaryText"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />

        <Button
            android:id="@+id/RevsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reviews"
            android:background="@color/colorAccent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/IconsAndText"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <ImageView
        android:id="@+id/favImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@id/vote"
        app:layout_constraintStart_toStartOf="@id/vote"
        app:layout_constraintEnd_toEndOf="@id/vote"
        android:clickable="true"
        android:src="@drawable/ic_favorite_border_black_24dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        app:layout_constraintStart_toStartOf="@id/poster"
        app:layout_constraintTop_toBottomOf="@id/RevsButton"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="20sp"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/overview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/trailerCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trailers:"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/primaryText"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/poster"
        app:layout_constraintTop_toBottomOf="@id/trailerCaption"
        android:id="@+id/trailer_rv">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
</ScrollView>